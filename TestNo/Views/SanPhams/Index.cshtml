@model IEnumerable<TestNo.Models.SanPham>

@{
    ViewData["Title"] = "SẢN PHẨM";
}

<h1>SẢN PHẨM</h1>

<style>
    .button{border-radius:8px;
            color:white;
            font-size:16px;
            padding:10px 20px
    }
    .button1{background-color:steelblue;}
    .button2{background-color:orange;}
    .button3{background-color:lightskyblue;}
    .button4{background-color:red;}
</style>
<p>
    <a asp-action="Create" class="button button1">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonViTinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonViTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSP" class="button button2">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaSP" class="button button3">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaSP" class="button button4">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
